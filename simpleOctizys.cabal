-- Cabal (the library) version you are using. As such, the Cabal (the library)
-- version used must be equal or greater than the version stated in this field.
-- Starting from the specification version 2.2, the cabal-version field must be
-- the first thing in the cabal file.

-- Initial package description 'jam-cope' generated by
-- 'cabal init'. For further documentation, see:
--   http://haskell.org/cabal/users-guide/
--
-- The name of the package.
name:            simpleOctizys

-- The package version.
-- See the Haskell package versioning policy (PVP) for standards
-- guiding when and how versions should be incremented.
-- PVP summary:     +-+------- breaking API changes
--                  | | +----- non-breaking API additions
--                  | | | +--- code changes with no API change
version:         0.1.0.0

-- A short (one-line) description of the package.
synopsis:        A non production ready language

-- A longer description of the package.
-- description:

-- The license under which the package is released.
license:         MIT

-- The file containing the license text.
license-file:    LICENSE

-- The package author(s).
author:          Luis Alberto Díaz Díaz

-- An email address to which users can send suggestions, bug reports, and patches.
maintainer:      73986926+Luis-omega@users.noreply.github.com

-- A copyright notice.
-- copyright:
category:        Language
build-type:      Simple

-- Extra doc files to be distributed with the package, such as a CHANGELOG or a README.
extra-doc-files: CHANGELOG.md

-- Extra source files to be distributed with the package, such as examples, or a tutorial module.
-- extra-source-files:


flag TestMode
  description: Signal if we are more flexible at building the package
  default:     True
  manual:      True

common warnings
  if flag(testmode)
    ghc-options: -Wall -Wno-prepositive-qualified-module

  else
    ghc-options: -Wall -Werror -Wno-prepositive-qualified-module

common common_plugings
  ghc-options: -fplugin=Effectful.Plugin

common common_extensions
  default-extensions:
    DeriveFunctor
    DeriveGeneric
    DeriveLift
    DerivingVia
    DisambiguateRecordFields
    DuplicateRecordFields
    ExplicitForAll
    FlexibleContexts
    FlexibleInstances
    LambdaCase
    MultiParamTypeClasses
    NamedFieldPuns
    NamedWildCards
    NumericUnderscores
    OverloadedRecordDot
    OverloadedStrings
    PartialTypeSignatures
    RecordWildCards
    ScopedTypeVariables
    TypeApplications
    TypeOperators

library
  -- Import common warning flags.
  import:
    warnings,
    common_extensions,
    common_plugings

  -- ghc-options: -fplugin=Effectful.Plugin

  -- Modules exported by the library.
  exposed-modules:
    Ast.Combinators
    Ast.Context
    Ast.Expression
    Ast.Inference
    Ast.Symbol
    Ast.Type
    Common
    Effects.Console.Effect
    Effects.Console.Interpreter
    Logging.Effect
    Logging.Entry
    Logging.Interpreters.Console
    Logging.Levels
    Logging.Loggers
    WAlgorithm.Substitution
    WAlgorithm.Unification

  -- Modules included in this library but not exported.
  -- other-modules:

  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:

  -- Other library packages from which modules are imported.
  build-depends:
    , aeson
    , base              ^>=4.18.2.1
    , bytestring
    , containers
    , effectful
    , effectful-core
    , effectful-plugin
    , effectful-th
    , pretty-show
    , prettyprinter
    , QuickCheck
    , template-haskell
    , text

  -- Directories containing source files.
  hs-source-dirs:   src

  -- Base language which the package is written in.
  default-language: Haskell2010

executable simpleOctizys
  -- Import common warning flags.
  import:
    warnings
    , common_extensions
    , common_plugings

  -- .hs or .lhs file containing the Main module.
  main-is:          Main.hs

  -- Modules included in this executable, other than Main.

  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:

  -- Other library packages from which modules are imported.
  build-depends:
    , base                  ^>=4.18.2.1
    , containers
    , effectful
    , effectful-core
    , effectful-plugin
    , effectful-th
    , optparse-applicative
    , pretty-show
    , prettyprinter
    , simpleOctizys
    , text

  -- Directories containing source files.
  hs-source-dirs:   app

  -- Base language which the package is written in.
  default-language: Haskell2010

test-suite simpleOctizys-test
  -- Import common warning flags.
  import:
    warnings,
    common_extensions,
    common_plugings

  -- Base language which the package is written in.
  default-language: Haskell2010

  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:

  -- The interface type and version of the test suite.
  type:             exitcode-stdio-1.0

  -- Directories containing source files.
  hs-source-dirs:   test

  -- The entrypoint to the test suite.
  main-is:          Main.hs

  -- Modules included in this executable, other than Main.
  other-modules:

  -- Test dependencies.
  build-depends:
    , base              ^>=4.18.2.1
    , containers
    , effectful
    , effectful-core
    , effectful-plugin
    , prettyprinter
    , QuickCheck
    , simpleOctizys
    , tasty
    , tasty-golden
    , tasty-hedgehog
    , tasty-hunit
    , text
